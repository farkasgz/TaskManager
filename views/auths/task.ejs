<div class="one-task-page">
    <div class="one-task-top">
        <a href="/home/todo" class="go-back-btn">Go Back</a>
        <h1 class="one-task-header"><%= oneTask.title %></h1>
        <form class="add-task-form" action="/home/todo/<%- oneTask._id %>/add" method="POST">
            <label class="add-task-label">Add task: 
                <input type="text" name="task" class="add-task-input" autofocus>
            </label>
            <button type="submit" class="add-task-btn">Add</button>
        </form>
        <form class="update-deadline-form" action="/home/todo/<%- oneTask._id %>" method="POST">
            <label class="add-task-label">Update deadline: 
                <input class="input-field" type="date" name="deadline" value="<%= oneTask.deadline.toISOString().substr(0, 10) %>">
            </label>
            <button type="submit" class="add-task-btn">Update Deadline</button>
        </form>
        
    </div>
    <div class="task-space">
    <ul class="all-task-list">
        <% oneTask.tasks.forEach(task => { %>
        <li class="added-task <% if(task.completed) {%>
            crossed-task
            <% } %>" id="<%= task._id %>"><%= task.title %></li>
        <% }) %>
    </ul>
    </div>  
    <form action="/home/todo/<%- oneTask._id %>/delete" method="POST">
        <button type="submit" class="delete-todo-btn">DELETE</button>
    </form>
</div>