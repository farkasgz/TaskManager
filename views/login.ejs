<h1>Login Page</h1>

<form action="/login" method="POST">
    <label>Username:
        <input type="text" name="username" required>
    </label>
    <label>Password: 
        <input type="password" name="password" required>
    </label>
    <button type="submit">Log In</button>
</form>

<% if (typeof errorMessage !== "undefined") { %>
    <p><%= errorMessage %></p>
<% } %>